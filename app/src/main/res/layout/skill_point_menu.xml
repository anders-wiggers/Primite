<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:clickable="true"
    >

    <ScrollView
        android:id="@+id/talentScroll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ScrollView>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/talentConstain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/critChance"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/rarity_common"
            android:gravity="bottom|right"
            android:paddingBottom="5dp"
            android:paddingRight="7dp"
            android:text="3/5"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/rifleDamage"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:elevation="2dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/critChance"
            app:layout_constraintEnd_toEndOf="@+id/critChance"
            app:layout_constraintStart_toStartOf="@+id/critChance"
            app:layout_constraintTop_toTopOf="@+id/critChance"
            app:srcCompat="@android:drawable/ic_menu_view" />

        <View
            android:id="@+id/view"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="@color/talentGreyBar"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/critDamage"
            app:layout_constraintEnd_toEndOf="@+id/critDamage"
            app:layout_constraintStart_toStartOf="@+id/critDamage"
            app:layout_constraintTop_toBottomOf="@+id/critChance" />

        <Button
            android:id="@+id/critDamage"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="164dp"
            android:background="@drawable/rarity_common"
            android:gravity="bottom|right"
            android:paddingBottom="5dp"
            android:paddingRight="7dp"
            android:text="3/5"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/rifleDamage"
            app:layout_constraintTop_toBottomOf="@+id/critChance" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/critDamage"
            app:layout_constraintEnd_toEndOf="@+id/critDamage"
            app:layout_constraintStart_toStartOf="@+id/critDamage"
            app:layout_constraintTop_toTopOf="@+id/critDamage"
            app:srcCompat="@android:drawable/ic_menu_preferences" />

        <Button
            android:id="@+id/rifleDamage"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/rarity_common"
            android:gravity="bottom|right"
            android:paddingBottom="5dp"
            android:paddingRight="7dp"
            android:text="3/5"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/rifleDamage"
            app:layout_constraintEnd_toEndOf="@+id/rifleDamage"
            app:layout_constraintStart_toStartOf="@+id/rifleDamage"
            app:layout_constraintTop_toTopOf="@+id/rifleDamage"
            app:srcCompat="@android:drawable/ic_menu_preferences" />

        <Button
            android:id="@+id/snipeDamage"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/rarity_common"
            android:gravity="bottom|right"
            android:paddingBottom="5dp"
            android:paddingRight="7dp"
            android:text="3/5"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/snipeDamage"
            app:layout_constraintEnd_toEndOf="@+id/snipeDamage"
            app:layout_constraintStart_toStartOf="@+id/snipeDamage"
            app:layout_constraintTop_toTopOf="@+id/snipeDamage"
            app:srcCompat="@android:drawable/ic_menu_preferences" />

        <Button
            android:id="@+id/miniDamage"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/rarity_common"
            android:gravity="bottom|right"
            android:paddingBottom="5dp"
            android:paddingRight="7dp"
            android:text="3/5"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/snipeDamage"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/miniDamage"
            app:layout_constraintEnd_toEndOf="@+id/miniDamage"
            app:layout_constraintStart_toStartOf="@+id/miniDamage"
            app:layout_constraintTop_toTopOf="@+id/miniDamage"
            app:srcCompat="@android:drawable/ic_menu_preferences" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="0dp" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>